@{
    ViewData["Title"] = Model.Title;
}

@model ResetPasswordViewModel

<section id="header">
    <div class="container text-center text-xs-center">
        <div class="row">
            <div class="col">
                <h2>Reset your password!</h2>
                <hr class="w-50">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-lg-5 mx-auto mt-2 text-center">
            <form asp-action="SendResetPassword">
                <fieldset class="form-group"> <input type="email" asp-for="Email" placeholder="Email..."
                        class="form-control form-control-sm">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </fieldset>
                <fieldset class="form-group"> <input type="password" asp-for="NewPassword" placeholder="New Password..."
                        class="form-control form-control-sm">
                    <span class="text-danger" asp-validation-for="NewPassword"></span>
                </fieldset>
                <button type="submit" class="btn btn-outline-primary btn-block">Reset Password</button>
            </form>
        </div>
    </div>
</section>

<partial name="_AlertPartial" model="@Model.Alert"/>