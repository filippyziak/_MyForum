@{
    ViewData["Title"] = Model.Title;
}

@model CategoriesViewModel

<div class="container text-center text-xs-center mt-3">
    <div class="row">
        <div class="col">
            <h2>Categories</h2>
            <hr width="50%">
        </div>
    </div>
</div>

<div class="container text-xs-center">
    <div class="row">
        @foreach (var category in Model.Categories)
        {
            <div class="col-md-4 text-center my-2">
                <a class="btn btn-outline-primary btn-lg btn-block" asp-action="Details" asp-controller="Category"
                    asp-route-id="@category.Id" asp-route-pageNumber="1">@category.Name</a>
            </div>
        }
    </div>
</div>